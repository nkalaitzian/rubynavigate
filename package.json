{
  "name": "rubynavigate",
  "displayName": "RubyNavigate",
  "description": "Navigate Ruby projects with ease - quickly jump to classes and modules using fuzzy search and fully qualified names",
  "version": "0.0.6",
  "publisher": "pastouris",
  "icon": "logo.png",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nkalaitzian/rubynavigate"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ruby",
    "navigation",
    "class",
    "module",
    "jump",
    "find",
    "rails",
    "goto",
    "symbol"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rubynavigate.find",
        "title": "RubyNavigate: Find Class/Module"
      }
      ,
      {
        "command": "rubynavigate.previewActive",
        "title": "RubyNavigate: Preview Active Selection"
      }
    ]
    ,
    "configuration": {
      "type": "object",
      "title": "RubyNavigate",
      "properties": {
        "rubynavigate.maxCurrentlyOpenItems": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Maximum number of 'Currently open' items shown in the Quick Pick."
        },
        "rubynavigate.maxRecentlyOpenedItems": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Maximum number of 'Recently opened' items shown in the Quick Pick."
        },
        "rubynavigate.excludeDirectories": {
          "type": "array",
          "default": ["node_modules", ".git", "vendor", "tmp", "dist", "out"],
          "items": {
            "type": "string"
          },
          "description": "Directories to exclude when searching for Ruby files. Each entry will be matched as **/{entry}/**."
        }
      }
    }
    ,
    "keybindings": [
      {
        "command": "rubynavigate.previewActive",
        "key": "right",
        "when": "extension.rubynavigate.pickerActive && inQuickOpen"
      },
      {
        "command": "rubynavigate.openInBackground",
        "key": "ctrl+right",
        "when": "extension.rubynavigate.pickerActive && inQuickOpen"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src --ext ts",
    "test": "npm run compile-tests && mocha --ui tdd ./out/test/suite/**/*.test.js",
    "release": "powershell -ExecutionPolicy Bypass -File scripts/release.ps1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  }
}
