{
  "name": "rubynavigate",
  "displayName": "RubyNavigate",
  "description": "Navigate Ruby projects with ease - quickly jump to classes and modules using fuzzy search and fully qualified names",
  "version": "0.0.17",
  "publisher": "pastouris",
  "icon": "logo.png",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nkalaitzian/rubynavigate"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ruby",
    "navigation",
    "class",
    "module",
    "jump",
    "find",
    "rails",
    "goto",
    "symbol"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "rubynavigate.find",
        "title": "RubyNavigate: Find Class/Module"
      },
      {
        "command": "rubynavigate.previewActive",
        "title": "RubyNavigate: Preview Active Selection"
      },
      {
        "command": "rubynavigate.copyQualifiedName",
        "title": "RubyNavigate: Copy Qualified Name to Clipboard",
        "enablement": "editorTextFocus"
      },
      {
        "command": "rubynavigate.rebuildCache",
        "title": "RubyNavigate: Rebuild Symbol Cache"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "RubyNavigate",
      "properties": {
        "rubynavigate.maxCurrentlyOpenItems": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Maximum number of 'Currently open' items shown in the Quick Pick."
        },
        "rubynavigate.maxRecentlyOpenedItems": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Maximum number of 'Recently opened' items shown in the Quick Pick."
        },
        "rubynavigate.excludeDirectories": {
          "type": "array",
          "default": [
            "node_modules",
            ".git",
            "vendor",
            "tmp",
            "dist",
            "out"
          ],
          "items": {
            "type": "string"
          },
          "description": "Directories to exclude when searching for Ruby files. Each entry will be matched as **/{entry}/**."
        },
        "rubynavigate.priorityDirectories": {
          "type": "array",
          "default": [
            "app/models",
            "app/controllers",
            "app/services",
            "app/jobs",
            "app/helpers",
            "app",
            "lib"
          ],
          "items": {
            "type": "string"
          },
          "description": "Directories to index first during startup. Files in these directories will be processed before others, improving perceived performance. Order matters - earlier entries are indexed first."
        },
        "rubynavigate.maxCacheSizeMB": {
          "type": "number",
          "default": 100,
          "minimum": 1,
          "maximum": 1000,
          "description": "Maximum size of the symbol cache file in megabytes. If the cache exceeds this limit, older entries will be pruned. Default: 100 MB."
        },
        "rubynavigate.fileIndexTimeoutMs": {
          "type": "number",
          "default": 5000,
          "minimum": 100,
          "description": "Maximum time in milliseconds to index a single Ruby file before skipping it and showing a warning notification."
        }
      }
    },
    "keybindings": [
      {
        "command": "rubynavigate.previewActive",
        "key": "right",
        "when": "extension.rubynavigate.pickerActive && inQuickOpen"
      },
      {
        "command": "rubynavigate.openInBackground",
        "key": "ctrl+right",
        "when": "extension.rubynavigate.pickerActive && inQuickOpen"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "cross-env NODE_OPTIONS=--no-deprecation webpack",
    "watch": "cross-env NODE_OPTIONS=--no-deprecation webpack --watch",
    "watch-tests": "tsc -p . -w --outDir out",
    "package": "cross-env NODE_OPTIONS=--no-deprecation webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src --ext ts",
    "test": "npm run compile-tests && mocha --ui tdd ./out/test/suite/**/*.test.js",
    "release": "powershell -ExecutionPolicy Bypass -File scripts/release.ps1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vscode/test-electron": "^2.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^10.0.1",
    "glob": "^13.0.6",
    "mocha": "^5.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  }
}
