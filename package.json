{
  "name": "rubynavigate",
  "displayName": "RubyNavigate",
  "description": "Quickly jump to Ruby classes and modules by their fully qualified names (e.g., Foo::Bar)",
  "version": "0.0.3",
  "publisher": "pastouris",
  "icon": "logo.png",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nkalaitzian/rubynavigate"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rubynavigate.find"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rubynavigate.find",
        "title": "RubyNavigate: Find Class/Module"
      }
    ]
    ,
    "configuration": {
      "type": "object",
      "title": "RubyNavigate",
      "properties": {
        "rubynavigate.maxCurrentlyOpenItems": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Maximum number of 'Currently open' items shown in the Quick Pick."
        },
        "rubynavigate.maxRecentlyOpenedItems": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Maximum number of 'Recently opened' items shown in the Quick Pick."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src --ext ts",
    "test": "npm run compile-tests && mocha --ui tdd ./out/test/suite/**/*.test.js",
    "release": "powershell -ExecutionPolicy Bypass -File scripts/release.ps1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  }
}
